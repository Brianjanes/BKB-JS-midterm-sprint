<%- include('partials/header') %>
<div class="content-wrapper">
  <main class="homepage-container">
    <h1>Top Rated Movies</h1>
    <div class="top-rated-movies-container">
      <% for (let i = 0; i < movies.length; i++) { %>
      <div class="number-card">
        <div class="movie-rank">
            <%= i + 1 %>. <%= movies[i].title %>
        </div>
        <div class="featured-movie-card">
          <div class="spider-container">
            <div class="spider spider-1"></div>
            <div class="spider spider-2"></div>
            <div class="spider spider-3"></div>
          </div>
          <div class="ghost-container">
            <div class="ghost ghost-1">ðŸ‘»</div>
            <div class="ghost ghost-2">ðŸ‘»</div>
          </div>
          <div class="bat-container">
            <div class="bat bat-left-1">ðŸ¦‡</div>
            <div class="bat bat-left-2">ðŸ¦‡</div>
            <div class="bat bat-right-1">ðŸ¦‡</div>
            <div class="bat bat-right-2">ðŸ¦‡</div>
          </div>
          <a href="/movie/<%= movies[i].id %>" class="featured-movie-link">
            <div class="featured-movie-wrapper">
              <div class="movie-image-container">
                <img
                  src="<%= movies[i].image %>"
                  alt="<%= movies[i].title %>"
                  class="movie-image"
                  onerror="this.src='/MoviePics/Gladiator.jpg'"
                />
              </div>
              <!-- <h2 class="featured-movie-title"><%= movies[i].title %></h2> -->
              <div class="featured-movie-metadata">
                <span class="featured-movie-year"><%= movies[i].releaseYear %></span>
                <% if (movies[i].rating !== null) { %>
                <span class="featured-movie-score"
                  >â˜… <%= movies[i].rating.toFixed(1) %>/10</span
                >
                <% } else { %>
                <span class="featured-movie-unreleased">Unreleased</span>
                <% } %>
              </div>
            </div>
          </a>
        </div>
      </div>
      <% } %>
    </div>
  </main>
</div>
<%- include('partials/footer') %>